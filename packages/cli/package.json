{
  "name": "spectacle-cli",
  "version": "2.0.0-alpha.1",
  "description": "CLI for Spectacle",
  "main": "src/cli.ts",
  "bin": {
    "spectacle-cli": "bin/cli.js"
  },
  "author": "Formidable Labs <hello@formidable.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FormidableLabs/spectacle.git"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "cli-spinners": "^2.6.1",
    "commander": "^9.3.0",
    "log-update": "4.0.0"
  },
  "peerDependencies": {},
  "devDependencies": {
    "spectacle": "*",
    "@types/node": "^18.0.3",
    "nodemon": "^2.0.18",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.1",
    "typescript": "*"
  },
  "resolutions": {},
  "scripts": {
    "clean": "rimraf bin",
    "start": "nodemon src/cli.ts",
    "build": "tsc --p tsconfig.json",
    "preversion": "pnpm run clean && pnpm run build",
    "TODO_WIREIT": "echo TODO HANDLE TASKS ABOVE",
    "lint": "wireit",
    "lint:fix": "wireit"
  },
  "wireit": {
    "lint": {
      "command": "nps lint:pkg",
      "files": [
        "*.js",
        "src/**",
        "../../.eslintignore",
        "../../.eslintrc"
      ],
      "output": [],
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    },
    "lint:fix": {
      "command": "pnpm run lint || nps lint:pkg:fix",
      "files": [
        "*.js",
        "src/**",
        "../../.eslintignore",
        "../../.eslintrc"
      ],
      "output": [],
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    }
  }
}
